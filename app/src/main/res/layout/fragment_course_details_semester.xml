<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_course_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    tools:context="net.codealizer.thegradebook.ui.classbook.fragments.CourseDetailSemesterFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/term_cards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/grades_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Uh oh! There's nothing here"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/darker_gray"
        android:visibility="invisible" />

</RelativeLayout>
